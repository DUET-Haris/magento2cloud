<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_GiftRegistry:etc/giftregistry.xsd">
    <attribute_type name="text">
        <label translate="false">Text</label>
    </attribute_type>
    <attribute_group name="event_information"
                     sort_order="5" visible="true">
        <label translate="false">Event Information</label>
    </attribute_group>
    <registry>
        <static_attribute name="event_country"
                          type="country" group="event_information" visible="true">
            <label translate="false">Event Country</label>
        </static_attribute>
        <custom_attribute name="my_event_special"
                          type="country" group="event_information" visible="true">
            <label translate="false">My event special</label>
        </custom_attribute>
    </registry>
    <registrant>
        <static_attribute name="role" type="select"
                          group="registrant" visible="true">
            <label translate="false">Role</label>
        </static_attribute>
        <custom_attribute name="my_special_attribute"
                          type="country" group="registrant" visible="true">
            <label translate="false">My special attribute</label>
        </custom_attribute>
    </registrant>
</config>
